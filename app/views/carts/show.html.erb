<h2>ショッピングカート</h2>
<!-- カートを空にするボタン -->

<table>
  <thead>
	  <tr>
	    <th>商品名</th>
	    <th>単価（税込）</th>
	    <th>数量</th>
	    <th>小計</th>
	    <th></th>
	  </tr>
  </thead>
  <tbody>
	  <% @carts.each do |cart| %>
	  <tr>
	  	<td><%= cart.product.name %></td>
	  	<td><%= cart.tax_included %></td>
	  	<td><%= cart.stock %></td>
		<td><%= cart.subtotal %></td>
	  	<td><%= link_to "削除する",user_carts_path(cart), class: 'btn-sm btn-danger', method: :delete %></td>
	  </tr>
	  <% end %>
  </tbody>
</table>
