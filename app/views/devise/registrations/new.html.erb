<div class="container">
  <div class="row">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
  </div>
</div>
<%# ここまでエラーメッセージ %>

<h4 class="ml-5 bg-light d-inline">新規会員登録</h4>
<div class="form pt-5">
  <div class="container">
    <div class="row mb-2">
      <div class="col-md-3">
        <span>名前</span>
      </div>

      <div class="col-md-1">
        <%= f.label :first_name %>
      </div>

      <div class="col-md-2">
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control", id: "first_name" %>
      </div>

      <div class="col-md-1">
        <%= f.label :last_name %>
      </div>

      <div class="col-md-2">
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control", id: "last_name"  %>
      </div>

    </div>

    <div class="row mb-2">
      <div class="col-md-3">
        <span>フリガナ</span>
      </div>

      <div class="col-md-1">
        <%= f.label :first_kana, "(セイ)" %>
      </div>

      <div class="col-md-2">
        <%= f.text_field :first_kana, autofocus: true, autocomplete: "first_kana", class: "form-control" %>
      </div>

      <div class="col-md-1">
        <%= f.label :last_kana, "(メイ)" %>
      </div>

      <div class="col-md-2">
        <%= f.text_field :last_kana, autofocus: true, autocomplete: "last_kana", class: "form-control" %>
      </div>
    </div>

    <div class="row mb-2">
      <div class="col-md-3">
        <span><%= f.label :email, "メールアドレス" %></span>
      </div>
      <div class="col-md-1">
        <span></span>
        <%# 行を整えるための空白 %>
      </div>
      <div class="col-md-2">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
    </div>

    <div class="row mb-2">
      <div class="col-md-3">
        <%= f.label :postal_code, "郵便番号" %>
      </div>
      <div class="col-md-1">
        <span></span>
        <%# 行を整えるための空白 %>
      </div>
      <div class="col-md-2">
        <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class: "form-control" %>
      </div>
    </div>

    <div class="row mb-2">
      <div class="col-md-3">
        <%= f.label :address, "住所" %>
      </div>
      <div class="col-md-1">
        <span></span>
        <%# 行を整えるための空白 %>
      </div>
      <div class="col-md-5">
        <%= f.text_field :address, autofocus: true, autocomplete: "name", :size=>"50", class: "form-control" %>
      </div>
    </div>

    <div class="row mb-2">
      <div class="col-md-3">
        <span><%= f.label :telephone_number, "電話番号" %></span>
      </div>
      <div class="col-md-1">
        <span></span>
        <%# 行を整えるための空白 %>
      </div>
      <div class="col-md-2">
        <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number", class: "form-control" %>
      </div>
    </div>

    <div class="row mb-2">
      <div class="col-md-3">
        <span><%= f.label :password %></span>
      </div>
      <div class="col-md-1">
        <span></span>
        <%# 行を整えるための空白 %>
      </div>
      <div class="col-md-2">
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      </div>
    </div>


    <div class="row mb-2">
      <div class="col-md-3">
        <span><%= f.label :password_confirmation %></span>
      </div>
      <div class="col-md-1">
        <span></span>
        <%# 行を整えるための空白 %>
      </div>
      <div class="col-md-2">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>
    </div>
  </div>

</div>

<div class="actions text-center">
  <%= f.submit "新規登録", class: "btn btn-success pr-5 pl-5 mt-2 submit-btn" %>
</div>
<% end %>

<h4 class="ml-5 bg-light d-inline">既に登録済みの方</h4>

<div class="container">
  <div class="row"></div>
  <p class="col-md-4 pt-4"><u><%= link_to 'こちら', new_user_session_path %></u>からログインしてください。</p>
</div>
</div>
  