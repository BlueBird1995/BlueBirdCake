<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= render "devise/shared/error_messages", resource: resource %>

<table>
  <tr>
    <td>名前</td>
    <td>
      <%= f.label :（姓）  %>
      <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
    </td>
    <td>
      <%= f.label :（名） %>
      <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
    </td>
  </tr>

  <tr>
    <td>フリガナ</td>
    <td>
      <%= f.label :（セイ） %>
      <%= f.text_field :first_kana, autofocus: true, autocomplete: "first_kana" %>
    </td>

    <td>
      <%= f.label :（メイ） %>
      <%= f.text_field :last_kana, autofocus: true, autocomplete: "last_kana" %>
    </td>
  </tr>

  <tr>
    <td>メールアドレス</td>
    <td>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </td>
  </tr>

  <tr>
    <td>郵便番号</td>
    <td>
      <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
    </td>
  </tr>

  <tr>
    <td>住所</td>
    <td>
      <%= f.text_field :address, autofocus: true, autocomplete: "name", :size=>"50" %>
    </td>
  </tr>

  <tr>
    <td>電話番号</td>
    <td>
      <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
    </td>
  </tr>

  <tr>
    <td>パスワード（６文字以上）</td>
    <td>
      <%= f.password_field :password, autocomplete: "new-password" %>
    </td>
  </tr>

  <tr>
    <td>パスワード（確認用）</td>
    <td>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </td>
  </tr>

</table>

<div class="actions">
  <%= f.submit "新規登録", class: "btn btn-success"%>
</div>
<% end %>

<h3>既に登録済みの方</h3>
<p><%= link_to 'こちら', new_user_session_path %>からログインしてください。</p>