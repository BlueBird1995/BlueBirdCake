<div class="container">
    <h1>マイページ</h1>

    <div class="row">
        <span>登録情報</span>
        <%= link_to "編集する", edit_user_path(@user), class:"btn btn-primary" %>
        <%= link_to "パスワードを変更する", "#", class:"btn btn-prymary"%>
    </div>

    <table class="table table-bordered">
        <tr>
            <td>氏名</td>
            <td><%= @user.first_name %><%= @user.last_name %></td>
        </tr>
        <tr>
            <td>カナ</td>
            <td><%= @user.first_kana %><%= @user.last_kana %></td>
        </tr>
        <tr>
            <td>郵便番号</td>
            <td><%= @user.postal_code %></td>
        </tr>
        <tr>
            <td>住所</td>
            <td><%= @user.address %></td>
        </tr>
        <tr>
            <td>電話番号</td>
            <td><%= @user.telephone_number %></td>
        </tr>
        <tr>
            <td>メールアドレス</td>
            <td><%= @user.email %></td>
        </tr>
    </table>

    <div class="row">
        <span>配送先</span>
        <%= link_to "一覧を見る", "#", class:"btn btn-prymary" %>
    </div>

    <div class="row">
        <span>注文履歴</span>
        <%= link_to "一覧を見る", "#", class:"btn btn-prymary" %>
    </div>
</div>