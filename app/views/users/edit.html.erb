<div class="profile-edit">
    <% if @user.errors.any? %>
      <div id="error_explanation" class="alert alert-danger">
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="row">
        <h3 class="page-title col-3">登録情報編集</h3>
    </div>

    <div class="card shadow">
        <%= form_for(@user) do |f| %>
            <div class="field row my-3">
                <%= f.label "名前", class: "col-2 font-weight-bold" %>
                <span class="col-1">（性）</span>
                <%= f.text_field :first_name, class: "form-control col-3" %>
                <span class="col-1">（名）</span>
                <%= f.text_field :last_name,  class: "form-control col-3" %>
            </div>

            <div class="field row my-3">
                <%= f.label "カナ", class: "col-2 font-weight-bold" %>
                <span class="col-1">(セイ)</span>
                <%= f.text_field :first_kana, class: "form-control col-3" %>
                <span class="col-1">(メイ)</span>
                <%= f.text_field :last_kana,  class: "form-control col-3" %>
            </div>

            <div class="field row my-3">
                <%= f.label :email, class: "col-2 font-weight-bold" %>
                <span class="col-1"></span><%= f.email_field :email, class: "form-control col-3" %>
            </div>

            <div class="field row my-3">
                <%= f.label :postal_code, class: "col-2 font-weight-bold" %>
                <span class="col-1"></span><%= f.text_field :postal_code, class: "form-control col-3" %>
            </div>

            <div class="field row my-3">
                <%= f.label :address, class: "col-2 font-weight-bold" %>
                <span class="col-1"></span><%= f.text_field :address, class: "form-control col-3" %>
            </div>

            <div class="field row my-3">
                <%= f.label :telephone_number, class: "col-2 font-weight-bold" %>
                <span class="col-1"></span><%= f.text_field :telephone_number, class: "form-control col-3" %>
            </div>

            <%= f.hidden_field :status, :value => @user.status %>

            <div class="row">
                <span class="col-2"></span>
                <%= f.submit "編集内容を保存する", class: "btn save-btn col-3" %>
                <span class="col-3"></span>
                <%= link_to "退会する", confirm_destroy_user_path(@user), class: "btn delete-btn"%>
            </div>
        <% end %>
    </div>
</div>
