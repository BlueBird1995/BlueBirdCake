
<div class="container">
  <h2>注文情報入力</h2>


     <h3>支払方法</h3>
      <br>
      <%= form_for @order, url: confirm_orders_path do |f| %>
        <%= f.radio_button :payment, :creditcard, checked: true %>
        <%= f.label :payment, "クレジットカード", {value: :creditcard} %>
        <label><%= f.radio_button :payment, :bank %>
          <%= f.label :payment, "銀行振込", {value: :bank} %></label>


      <h4>お届け先</h4>

      <input type="radio" name="address_button" value="my_address" checked="checked">ご自身の住所

      <input type="radio" name="address_button" value="deliveries_address">登録済住所から選択
     <!--  <%= form_for @user do |f| %>
      <%= f.select :user_id, Derivery.all.map { |g| [g.delivery, g.id] } %>
      <% end %> -->

      <input type="radio" name="address_button" value="new_address">新しいお届け先

      <h5>新しいお届け先</h5><br>
      <p>郵便番号(ハイフンなし)</p><%= f.text_field :postal_code %><br>
      <p>住所</p><%= f.text_field :address %><br>
      <p>宛名</p><%= f.text_field :name %><br>
      <%= f.submit '確認画面へ進む' %>
      <% end %>
</div>



