
<div class="container">
  <h2>注文情報入力</h2>

     <h3>支払方法</h3>
      <br>
      <!-- enumわからないところ -->
      <p>クレジットカード<p>  
      <p>銀行振込</p><br>

     <h3>お届け先</h3>
      <br>
      <h5>ご自身の住所</h5><br>
      <%= @order.user.postal_code %><%= @order.user.address %><br>
      <%= @order.user.first_name %><%= @order.user.last_name %><br><br>

      <h5>登録済住所から選択</h5><br>
      <% @user.deliveries.each do |f| %>
      <%= f.postal_code %>
      <%= f.address %>
      <%= f.name %>
      <% end %>

      <h5>新しいお届け先</h5><br>
      <%= form_for :order, url: confirm_orders_path do |f| %>
      <p>郵便番号(ハイフンなし)</p><%= f.text_field :postal_code %><br>
      <p>住所</p><%= f.text_field :address %><br>
      <p>宛名</p><%= f.text_field :name %><br>
      <%= f.submit '確認画面へ進む' %>
      <% end %>
</div>



