
<div class="container">

<h2>注文履歴一覧</h2>

<table class="table table-bordered">
  <tr class="bg-light">
    <td>注文日</td>
    <td>配送先</td>
    <td>注文商品</td>
    <td>支払金額</td>
    <td>ステータス</td>
    <td>注文詳細</td>
  </tr>


  	<% @orders.each do |f| %>
    <tr>
     <td><%= f.created_at.strftime("%Y/%m/%d")%></td>
     <td><%= f.postal_code %>
    	<%= f.address %>
    	<%= f.name %></td>
      <td></td>
     <td><%= f.total_price %></td>
     <td><%= f.status %></td>

     <td><%= link_to '表示する', order_path(f.id) ,class: "btn btn-primary"%></td>
     </tr>
    <% end %>

</table>

</div>