
<div class="container">

<h2>注文情報確認</h2>

<table class="table table-bordered">
  <tr>
    <td>商品名</td>
    <td>単価(税込)</td>
    <td>数量</td>
    <td>小計</td>
  </tr>

  <tr>
    <td>仮しょーとけーき</td>
    <td>仮10000</td>
    <td>仮100</td>
    <td>仮1000000</td>
  </tr>
</table>

<table class="table table-bordered">
<%= form_for(@order, url: orders_path)do |f| %>
  <tr>
    <th>送料</th><td><%= @order.postage %></td>
  </tr>

  <tr>
    <th>商品合計</th><td>ここなに</td>
  </tr>

  <tr>
    <th>請求金額</th><td><%= @order.total_price %></td>
  </tr>
</table>

  <h5>支払方法</h5><br>
	<p><%= @order.payment %></p><br>

  <h5>お届け先</h5><br>
	<%= @order.postal_code %>
	<%= @order.address %><br>
	<%= @order.name %>

<%= f.hidden_field :user_id, :value => current_user.id %>
<%= f.hidden_field :name, :value => @order.name %>
<%= f.hidden_field :postal_code, :value => @order.postal_code %>
<%= f.hidden_field :address, :value => @order.address %>
<%= f.hidden_field :total_price, :value => 1000 %>
<br>
<br>

	<%= f.submit '購入を確定する' %>
	<% end %>
</div>