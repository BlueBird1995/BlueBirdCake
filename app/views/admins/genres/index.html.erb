<div class="container">
  <h4 class="row ml-5  bg-light d-inline">ジャンル登録／一覧</h4>
  <%= form_for(@genre, url:admins_genres_path) do |f| %>

  <div class="row mt-3 mb-2">
    <div class="col-md-1">
      <span>ジャンル</span>
    </div>
    <div class="col-md-2">
      <%= f.text_field :name, autofocus: true, autocomplete: "genre_name", class: "form-control" %>
    </div>

    <div class="col-md-2">
      <label><%=f.radio_button :status, true %>有効</label>
      <label><%=f.radio_button :status, false, class: "ml-4" %>無効</label>
    </div>

    <div class="col-md-4">
      <%= f.submit "追加", class: "btn btn-primary" %>
    </div>
    <% end %>
  </div>

  <div class="row">
    <table class="table col-md-4">
      <thead class="bg-light">
        <th>ジャンル</th>
        <th>状態</th>
        <th></th>
      </thead>
      <% @genres.each do |f| %>
      <tr>
        <td><%= f.name %></td>
        <td>
          <%# 翻訳ができないのでif文で分岐させて日本語を表示しています。（ほりゆう）%>
          <% if f.status == true %>
          <span>有効</span>
          <% else %>
          <span>無効</span>
          <% end %>
        </td>
        <td><%= link_to '編集する ', edit_admins_genre_path(f.id), class: "btn btn-primary" %></td>
      </tr>
      <% end %>
    </table>
  </div>

</div>
