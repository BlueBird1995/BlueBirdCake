<div class="container">
    <h1>会員一覧画面</h1>


    <table class="table">
        <thead>
            <tr>
                <th>会員ID</th>
                <th>氏名</th>
                <th>メールアドレス</th>
                <th>ステータス</th>
            </tr>
        </thead>
        <tbody>
            <% @users.each do |user| %>
            <tr>
                <td><%= user.id %></td>
                <td><%= link_to user.name, admins_user_path(user) %></td>
                <td><%= user.email %></td>
                <td>
                    <% if user.status == true %>
                        <span>有効会員</span>
                    <% else %>
                        <span>退会済</span>
                    <% end %>
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>
