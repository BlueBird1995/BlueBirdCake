<%# 部分テンプレートにできるかも %>
<div class="container">
  <div class="row">
    <div class="col-md-3">
    <table class="table">
    <th class="bg-light">ジャンル検索</th>
      <% @genres.each do |f|%>
      <% if f.status == true %>
    <tr>
      <td>
      <%# ジャンルが無効なら表示しない %>
      <%= link_to f.name, genre_path(f.id) %>
      <% end %></td>
    </tr>
      <% end %>
    </table>
    </div>
  </div>
</div>