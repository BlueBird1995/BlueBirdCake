<div class="container">
  <div class="row">
    <div class="col-md-2">
      <table class="table">
        <th class="bg-light">ジャンル検索</th>
        <% @genres.each do |f|%>
        <% if f.status == true %>
        <tr>
          <td>
            <%# ジャンルが無効なら表示しない %>
            <%= link_to f.name, genre_path(f.id) %>
            <% end %></td>
        </tr>
        <% end %>
      </table>
    </div>
  

    <div class="col-md-10">
      <div id="genre">
          <% @product.each do |f| %>
        <div class="col-md-3">
          <%= link_to product_path(f.id) do %>
          <%= attachment_image_tag f, :product_image, format: 'jpeg', fallback: "no_image.jpg", size: "200x100" %><br>
          <%= f.name %><br>
          <% end %>
          <%= f.tax_included.to_s(:delimited) %>円
        </div>
          <% end %>
      </div>
    </div>
  </div>
</div>