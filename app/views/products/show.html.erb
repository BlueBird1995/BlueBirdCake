<!-- ジャンル検索部分テンプレート -->
<%# 追加しておきました。 %>
<div class="container">
  <div class="row">
    <div class="col-md-2">
      <table class="table">
        <th class="bg-light">ジャンル検索</th>
        <% @genres.each do |f|%>
        <% if f.status == true %>
        <tr>
          <td>
            <%# ジャンルが無効なら表示しない %>
            <%= link_to f.name, genre_path(f.id) %>
            <% end %></td>
        </tr>
        <% end %>
      </table>
    </div>

    <!-- 商品画像 -->
    <%= attachment_image_tag @product, :product_image,　format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %>
    <!-- 商品名 -->
    <%= @product.name %><br><br>
    <!-- 商品説明 -->
    <%= @product.description %><br>
    <!-- 価格 -->
    ¥<%= @product.tax_included.to_s(:delimited) %><br>
    <!-- カートに入れるボタン、但し販売中だけを表示 -->
    <% if @product.status %>

    <%= form_for @cart ,url: user_carts_path(@user) do |f| %>
    <%= f.hidden_field :product_id, value: @product.id %>
    <%= f.hidden_field :user_id, value: @user.id %>
    <%= f.select :stock, options_for_select((1..10).to_a), include_blank: "個数選択" %>
    <%= f.submit "カートに入れる",class: 'btn-sm btn-primary' %>
    <% end %>

    <% else %>
    <div>
      <p class="btn btn-danger mt-5">売り切れです</p>
    </div>
    <% end %>

  </div>

</div>