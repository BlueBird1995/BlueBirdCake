<!-- ジャンル検索部分テンプレート -->

<h2>商品一覧（全<%= @products.count %>件）</h2>
<% @products.each do |product| %>
<table>
  <tr>
    <td><%= link_to product_path(product) do %>
      <%= attachment_image_tag @product, :product_image, format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %>
      <% end %><br>
      <%= product.name %><br>
      <%= product.tax_included %>
    </td>
  </tr>
</table>
<% end %>
<!-- １ページに８件表示する -->
<%= paginate @products %>

<div class="pagination">
  <p>・</p>
  <p>・</p>
  <p>・</p>
  <p>・</p>
</div>
